{
  "manifest_version": 3,
  "name": "Scramble â€“ AI Writing Assistant",
  "version": "2.0",
  "description": "Your AI-powered writing assistant. Fix grammar, improve clarity, and enhance text anywhere on the web.",
  "icons": {
    "128": "assets/logo128.png",
    "256": "assets/logo256.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/logo128.png",
      "256": "assets/logo256.png"
    }
  },
  "commands": {
    "fix-grammar": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Fix spelling & grammar of selected text"
    },
    "improve-writing": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Improve writing of selected text"
    },
    "open-toolbar": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open Scramble toolbar"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/tw-output.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
