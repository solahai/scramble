{
  "name": "scramble",
  "version": "2.0.0",
  "description": "AI-powered writing assistant browser extension",
  "scripts": {
    "css:watch": "npx tailwindcss -i src/libs/tw-input.css -o src/libs/tw-output.css --minify --watch",
    "css:build": "npx tailwindcss -i src/libs/tw-input.css -o src/libs/tw-output.css --minify",
    "build": "npm run css:build && node build.js",
    "build:chrome": "npm run css:build && node build.js chrome",
    "build:firefox": "npm run css:build && node build.js firefox",
    "clean": "rm -rf dist",
    "package": "npm run build && node build.js package"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  }
}
